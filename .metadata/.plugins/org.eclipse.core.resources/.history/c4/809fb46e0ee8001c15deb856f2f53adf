#ifndef ESTADO_H_
#define ESTADO_H_

typedef struct
{
	int  isEmptyInt;
	char isEmptyChar[11];
}eIsEmpty;

/** \brief Inicia una estructura de 3 estados del pasajeros (anidada con ePasajeros)
 *
 * @return la estructura ya cargada de tipo pasajero
 */
eIsEmpty iniciarisEmpty(void);


/** \brief Cambia texto por el numero del estado del pasajero
 *
 * @param tipoPasajero
 * @param aux
 * @param estructuraTipoPasajero
 *
 * @return 0 = OK    -1 = FALLO
 */
int parsearIsEmptyPasajeroAEstructura(char isEmpty[], ePasajero aux,eIsEmpty estructuraisEmpty[]);


/** \brief Cambia numero por texto del estado del pasajero
 *
 * @param isEmpty
 * @param aux
 * @param estructuraisEmpty
 *
 * @return 0 = OK    -1 = FALLO
 */
int parsearIsEmptyPasajeroDesdeEstrutura(char isEmpty[], ePasajero aux,eIsEmpty estructuraisEmpty);

#endif /* ESTADO_H_ */
