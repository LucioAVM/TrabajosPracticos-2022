#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int soloLetras(char* string)
{
    int i;
    int retorno = 1;
    for(i=0;i<strlen(string);i++)
    {
        if((string[i]<'a' || string[i]>'z') && (string[i]<'A' || string[i]>'Z'))//agregar  tolower y touper
        {
            retorno = 0;
            break;
        }
    }
    return retorno;
}

int soloNumeros(char* string)
{
    int i;
    int retorno = 1;
    for(i=0;i<strlen(string);i++)
    {
        if(string[i]<'0' || string[i]>'9')
        {
            retorno = 0;
            break;
        }
    }
    return retorno;
}
