#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "LinkedList.h"
#include "Passenger.h"
#include "isEmpty.h"

eIsEmpty iniciarisEmpty(void)
{
	eIsEmpty estructuraisEmpty =
	{
			{1,"En Horario"},
			{2,"Aterrizado"},
			{3,"Demorado"}
	};

	return estructuraisEmpty;
}

int parsearIsEmptyPasajeroAEstructura(char isEmpty[], ePasajero aux,eIsEmpty estructuraIsEmpty[])
{
	int retorno,

	retorno = 0;

	if(strcmp(isEmpty,estructuraIsEmpty[1].isEmptyChar))
	{
		aux.isEmpty = estructuraIsEmpty[1].isEmptyInt;
	}else{
		if(strcmp(isEmpty,estructuraIsEmpty[2].isEmptyChar))
		{
			aux.isEmpty = estructuraIsEmpty[2].isEmptyInt;
		}else{
			if(strcmp(isEmpty,estructuraIsEmpty[3].isEmptyChar))
			{
				aux.isEmpty = estructuraIsEmpty[3].isEmptyInt;
			}else{
				retorno = -1;
			}
		}
	}
	return retorno;
}


int parsearIsEmptyPasajeroDesdeEstrutura(char isEmpty[], ePasajero aux,eIsEmpty estructuraIsEmpty)
{
	int retorno;

	retorno = 0;

	switch(aux.isEmpty)
	{
	case 1:
		strcpy(isEmpty,estructuraIsEmpty[1].isEmptyChar);
		break;
	case 2:
		strcpy(isEmpty,estructuraIsEmpty[2].isEmptyChar);
		break;
	case 3:
		strcpy(isEmpty,estructuraIsEmpty[3].isEmptyChar);
		break;
	default:
		retorno = -1;
		break;
	}
	return retorno;
}
